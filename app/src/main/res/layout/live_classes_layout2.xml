<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:id="@+id/line"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/live_thumbnil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner"
                android:scaleType="fitXY" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gredient"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingBottom="15dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF0000"
                    android:gravity="center"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/circle"/>

                    <TextView
                        android:id="@+id/attend_session"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:paddingLeft="7dp"
                        android:backgroundTint="#FF0000"
                        android:textColor="@color/white"
                        android:text="Live"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/live_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:fontFamily="@font/amiko"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:layout_marginRight="30dp"
                    android:maxLines="1"
                    android:text="Title of the slider app.. "/>

                <TextView
                    android:id="@+id/live_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:fontFamily="@font/amiko"
                    android:textSize="13sp"
                    android:visibility="visible"
                    android:textColor="#D5D5D5"
                    android:layout_marginRight="30dp"
                    android:maxLines="2"
                    android:ems="3"
                    android:ellipsize="end"
                    android:text="Description of the slider for this app.. "/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/live_time"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:text="4:00 AM"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/amiko"/>

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/circle"/>

                    <TextView
                        android:id="@+id/live_author_name"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Abhishek kumar bharaty"
                        android:textColor="@color/white"
                        android:fontFamily="@font/amiko"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/live_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEB DEVELOPMENT"
            android:textColor="#3F5BF5"
            android:textSize="12sp"
            android:visibility="gone"
            android:fontFamily="@font/amiko"/>

        <TextView
            android:id="@+id/joined_success"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joined successfully"
            android:textColor="@color/green"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>