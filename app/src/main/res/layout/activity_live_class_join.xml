<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.OrderHistoryDetail">
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/key_left"/>

        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Live session"
            android:layout_weight="1"
            android:textSize="17sp"
            android:fontFamily="@font/amiko"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rounded_corners_bg"
                    android:layout_height="200dp">
                    <ImageView
                        android:id="@+id/live_thumbnil"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent"
                        android:src="@drawable/bannar2"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0E000000" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="15dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/live_bg"
                        android:backgroundTint="#F74E42">
                        <TextView
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:background="@drawable/red_dot"
                            android:backgroundTint="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  LIVE"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENGLISH"
                    android:background="@drawable/rounded_corners_bg"
                    android:textColor="@color/grey"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/amiko"
                    android:backgroundTint="#B1F1F1F1"/>
                <TextView
                    android:id="@+id/live_tags"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="WEB DEVELOPMENT"
                    android:textColor="#3F5BF5"
                    android:textSize="12sp"
                    android:fontFamily="@font/amiko"/>
            </LinearLayout>
            <TextView
                android:id="@+id/live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn About How to Build Your Own Website"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/amiko"/>

            <TextView
                android:id="@+id/live_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Started at 4:00 AM"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:fontFamily="@font/amiko"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/live_author_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/user"/>
                <TextView
                    android:id="@+id/live_author_name"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:text="Abhishek kumar bharaty"
                    android:textColor="@color/black"
                    android:fontFamily="@font/amiko"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="14sp"
                android:layout_marginTop="10dp"
                android:background="@color/grey_lite"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="11sp"
                    android:fontFamily="@font/amiko"
                    android:layout_marginLeft="37dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/user"/>

                    <EditText
                        android:id="@+id/uname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="13dp"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/amiko"
                        android:textColor="@color/black"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/light_orange"
                        android:hint="Enter Name"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Id"
                    android:textSize="11sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:layout_marginLeft="37dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/mail"/>

                    <EditText
                        android:id="@+id/uemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="13dp"
                        android:textSize="16sp"
                        android:inputType="textEmailAddress"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/amiko"
                        android:textColor="@color/black"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/light_orange"
                        android:hint="Enter email Id"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile number"
                    android:textSize="11sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:layout_marginLeft="37dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/phone"/>

                    <EditText
                        android:id="@+id/umobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="13dp"
                        android:textSize="16sp"
                        android:inputType="phone"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/amiko"
                        android:textColor="@color/black"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/light_orange"
                        android:hint="Enter mobile number"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:layout_marginLeft="37dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/location"/>

                    <EditText
                        android:id="@+id/uaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="13dp"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/amiko"
                        android:textColor="@color/black"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/light_orange"
                        android:hint="Enter address"/>
                </LinearLayout>

                <com.skydoves.elasticviews.ElasticFloatingActionButton
                    android:id="@+id/submit_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:fabutton_duration="200"
                    app:fabutton_scale="0.93"
                    android:layout_marginTop="20dp"
                    android:foregroundGravity="center"
                    android:background="@drawable/red_dot"
                    android:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_arrow_forward_black_24dp">
                    ></com.skydoves.elasticviews.ElasticFloatingActionButton>
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>