<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardElevation="7dp"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/outline_stroke_bg"
        android:id="@+id/layout_all"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/banner"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/hot_offers"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title of the courses"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amiko"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description of the courses"
                android:textStyle="normal"
                android:gravity="center"
                android:ellipsize="end"
                android:ems="3"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                android:maxLines="2"
                android:fontFamily="@font/amiko"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:gravity="center">
                <RatingBar
                    android:id="@+id/courses_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="4.7"
                    android:progressTint="@color/black"
                    style="@style/Widget.AppCompat.RatingBar.Small"/>

                <TextView
                    android:id="@+id/rate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.6"
                    android:layout_marginLeft="10dp"
                    android:textStyle="normal"
                    android:textColor="@color/grey_dark"
                    android:textSize="13dp"
                    android:fontFamily="@font/amiko"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:layout_marginLeft="10dp"
                    android:textStyle="normal"
                    android:textColor="@color/grey_dark"
                    android:textSize="13dp"
                    android:fontFamily="@font/amiko"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_icon"
                    />
                <TextView
                    android:id="@+id/courses_rating_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="799"
                    android:layout_marginLeft="5dp"
                    android:textStyle="normal"
                    android:textColor="@color/grey_dark"
                    android:textSize="13dp"
                    android:fontFamily="@font/amiko"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:layout_marginLeft="5dp"
                    android:textStyle="normal"
                    android:textColor="@color/grey_dark"
                    android:textSize="13dp"
                    android:fontFamily="@font/amiko"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pri_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/show_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 499.00"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/amiko"/>
                <TextView
                    android:id="@+id/cut_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 400.00"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_dark"
                    android:textSize="14sp"
                    android:fontFamily="@font/amiko"/>
                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0.00%"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:fontFamily="@font/amiko"/>
            </LinearLayout>
            <TextView
                android:id="@+id/free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/green"
                android:fontFamily="@font/amiko"
                />

            <Button
                android:id="@+id/buyNow"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Buy Now"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amiko"
                android:textSize="14sp"
                android:backgroundTint="@color/light_green"
                android:background="@drawable/button_background"/>

            <LinearLayout
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need Help? Contact Us"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/amiko"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="70dp"
        android:id="@+id/see_all_text"
        android:layout_marginTop="70dp"
        android:visibility="gone"
        android:layout_height="70dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/vieww"/>
    </com.balysv.materialripple.MaterialRippleLayout>

</androidx.cardview.widget.CardView>