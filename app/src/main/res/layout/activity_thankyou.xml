<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ThankyouActivity">
    <LinearLayout
        android:id="@+id/top_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#17A812"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment successfully done"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payment_icon"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                />
        </LinearLayout>

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_design"
        android:fillViewport="true"
        android:layout_above="@id/buttonContainer"
        android:layout_marginBottom="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_design"
        android:layout_margin="15dp"
        android:backgroundTint="#E4F3F0F0"
        android:padding="10dp"
        android:background="@drawable/outline_stroke_bg"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:textSize="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/size"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="7dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/torder_image"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/banner"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/hot_offers"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/torder_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title of the courses for this app courses for this app"
                android:textStyle="normal"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tshow_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Rs. 499.00"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/tcut_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 400.00"
                    android:layout_marginLeft="10dp"
                    android:textStyle="normal"
                    android:textColor="@color/grey_dark"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_stroke_bg"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:id="@+id/mid"
        android:backgroundTint="#E4F3F0F0"
        android:layout_below="@id/top"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price Details"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:textSize="17dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MRP"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13dp"
            android:fontFamily="@font/poppins"/>
        <TextView
            android:id="@+id/torder_mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 100"
            android:layout_marginRight="10dp"
            android:textStyle="normal"
            android:textColor="@color/grey_dark"
            android:textSize="13dp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer Price"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:fontFamily="@font/poppins"/>
        <TextView
            android:id="@+id/torder_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 100"
            android:layout_marginRight="10dp"
            android:textStyle="normal"
            android:textColor="@color/grey_dark"
            android:textSize="13dp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GST"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:layout_weight="1"
            android:textColor="@color/grey_dark"
            android:textSize="13dp"
            android:fontFamily="@font/amiko"/>
        <TextView
            android:id="@+id/torder_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 50"
            android:layout_marginRight="10dp"
            android:textStyle="normal"
            android:textColor="@color/grey_dark"
            android:textSize="13dp"
            android:fontFamily="@font/amiko"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:fontFamily="@font/poppins"/>
        <TextView
            android:id="@+id/torder_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-Rs 50"
            android:layout_marginRight="10dp"
            android:textStyle="normal"
            android:textColor="@color/grey_dark"
            android:textSize="13dp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/tcoupon_lay"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coupon Discount"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:fontFamily="@font/amiko"/>
        <TextView
            android:id="@+id/tcouponDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textStyle="normal"
            android:text="0"
            android:textColor="@color/grey_dark"
            android:textSize="13dp"
            android:fontFamily="@font/amiko"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/poppins"/>
        <TextView
            android:id="@+id/torder_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 70"
            android:layout_marginRight="10dp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/mid"
        android:backgroundTint="#E4F3F0F0"
        android:layout_margin="15dp"
        android:background="@drawable/outline_stroke_bg"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coupon code"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tcouponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Coupon Applied"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:textColor="@color/grey"
            android:gravity="right"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order id"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                />
            <TextView
                android:id="@+id/razor_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rxds232323"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey"
                android:gravity="right"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment id"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                />
            <TextView
                android:id="@+id/paymentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST10"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey"
                android:gravity="right"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Payment status"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/payment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Success"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey"
                android:gravity="right"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Payment date"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/payment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/0000"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey"
                android:gravity="right"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Payment time"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/payment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey"
                android:gravity="right"
                />

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_above="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payment_sucessfull_icon"
                />
            <!--<com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/checkeddone"  />-->
            <TextView
                android:paddingStart="76dp"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:id="@+id/title"
                android:gravity="center_horizontal"
                android:paddingEnd="76dp"
                android:fontFamily="@font/poppins"
                android:text="You have successfully purchased the from CodersAdda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Download receipt"
            android:onClick="downloadReceipt"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/ok"
            android:background="@color/black"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="View Detail"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>