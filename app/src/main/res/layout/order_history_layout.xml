<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/order_hostory_card"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_all"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/orderh_banner"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/banner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/orderh_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Title of the courses for this app courses for this app"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:id="@+id/orderh_paid_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount: Rs 70"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:id="@+id/orderh_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date: dd/mm/yyyy, hh:mm:ss"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    >
                <TextView
                    android:id="@+id/orderh_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="status: failed"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto"/>
                    <TextView
                        android:id="@+id/orderh_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ordertype: course"
                        android:textStyle="normal"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>