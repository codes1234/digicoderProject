<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_logo"
                android:layout_width="wrap_content"
                android:src="@drawable/banner1"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:id="@+id/bottomText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is a simple text for All page"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="@font/amiko"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:gravity="center"
                    android:text="This is a simple text for All page This is a simple text for All page This is a simple text for All page This is a simple text for All page This is a simple text for All page"
                    android:textColor="@color/grey_dark"
                    android:textSize="15dp"/>
            </LinearLayout>

</LinearLayout>