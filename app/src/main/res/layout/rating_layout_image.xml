<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/review_image"
        android:layout_width="60dp"
        android:src="@drawable/user"
        app:civ_border_color="@color/grey_lite"
        app:civ_border_width="1dp"
        android:layout_height="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abhishek kumar"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:fontFamily="@font/amiko"
            android:layout_marginLeft="10dp"/>
        <RatingBar
            android:rating="4"
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:progressTint="@color/black"
            android:layout_marginTop="5dp"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/ratign_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is text for review and rating demo This is text for review and rating demo This is text for review and rating demo"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:layout_marginTop="7dp"
            android:textColor="#7A7878"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="12/12/2020, 12:00 AM"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:textColor="#7A7878"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey"/>
    </LinearLayout>

</LinearLayout>