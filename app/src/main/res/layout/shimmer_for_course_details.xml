<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:background="#E8E8E8"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.skydoves.elasticviews.ElasticButton
                android:layout_width="30dp"
                app:button_duration="200"
                app:button_scale="0.93"
                android:id="@+id/addFaveroite"
                android:layout_height="30dp"
                android:background="@drawable/ic_bookmark_border_black_24dp"
                android:layout_margin="15dp"
                android:layout_alignParentRight="true"/>
            <com.skydoves.elasticviews.ElasticFloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:fabutton_duration="200"
                app:fabutton_scale="0.93"
                android:src="@drawable/key_left"/>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/detail_bg_img">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">
                    <view
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginTop="60dp"
                        android:background="@color/grey"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@color/grey"
                        android:layout_marginTop="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/white"
                            android:src="@color/grey"/>

                        <View

                            android:layout_width="100dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            />
                        <View
                            android:layout_width="30dp"
                            android:layout_height="14dp"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/grey"
                            android:layout_marginRight="5dp"
                            />
                        <Button
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:backgroundTint="#FBF91C"
                            android:background="@color/grey"/>
                        <View
                            android:layout_width="30dp"
                            android:layout_height="13dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/grey"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:drawableLeft="@drawable/ic_round_play_circle_outline_24"
                        android:drawableTint="@color/white"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="  Play Demo Video"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/amiko"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:backgroundTint="#E8E8E8"
                android:background="@drawable/top_corner_radious"
                android:layout_marginTop="300dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About"
                            android:textStyle="normal"
                            android:fontFamily="@font/amiko"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp"/>
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlist"
                            android:textStyle="normal"
                            android:fontFamily="@font/amiko"
                            android:textColor="@color/grey_dark"
                            android:textSize="16dp"/>
                        <View
                            android:layout_width="50dp"
                            android:visibility="gone"
                            android:layout_height="2dp"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Review"
                            android:textStyle="normal"
                            android:fontFamily="@font/amiko"
                            android:textColor="@color/grey_dark"
                            android:textSize="16dp"/>
                        <View
                            android:layout_width="50dp"
                            android:visibility="gone"
                            android:layout_height="2dp"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author"
                            android:textStyle="normal"
                            android:fontFamily="@font/amiko"
                            android:textColor="@color/grey_dark"
                            android:textSize="16dp"/>
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:visibility="gone"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:contentPadding="10dp"
                        app:cardBackgroundColor="@color/white">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@color/grey"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:contentPadding="10dp"
                        app:cardBackgroundColor="@color/white">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@color/grey"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:contentPadding="10dp"
                        app:cardBackgroundColor="@color/white">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@color/grey"
                            />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/line_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/course_review"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line_author"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="center"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        app:cardBackgroundColor="@color/white"
                        app:contentPadding="2dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="10dp"
                        android:layout_height="130dp">
                        <ImageView
                            android:id="@+id/author_pic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/abhi"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/authorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dhananjay"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:fontFamily="@font/amiko"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">
                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:backgroundTint="#E68F03"
                            android:background="@drawable/rating_star"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp"
                            android:layout_marginLeft="10dp"
                            android:text="4.5"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/amiko"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_dark"
                            android:textSize="16dp"
                            android:layout_marginLeft="5dp"
                            android:text="   (20 Reviews)"
                            android:fontFamily="@font/amiko"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/aboutAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#717070"
                        android:textSize="14dp"
                        android:layout_margin="5dp"
                        android:text="The app is composed of two screens. The first screen displays a list of books, in which, each book is described by its title, author and cover photo. After a user selects a book from the list, a second screen appears displaying additional details about the book, including the publisher and no. of pages."
                        android:fontFamily="@font/amiko"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
    <com.skydoves.elasticviews.ElasticLayout
        android:id="@+id/bottom"
        app:layout_duration="200"
        app:layout_scale="0.93"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <View
                android:id="@+id/netPrice"
                android:layout_width="100dp"
                android:layout_height="16dp"
                android:background="@color/grey"/>
            <View
                android:layout_width="100dp"
                android:layout_height="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:padding="5dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/outline_stroke_bg"
                android:text=" Enroll Now "
                android:textAllCaps="true"
                android:textStyle="bold"
                android:fontFamily="@font/amiko"/>
        </LinearLayout>
    </com.skydoves.elasticviews.ElasticLayout>
</RelativeLayout>